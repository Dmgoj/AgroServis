@model AgroServis.Services.DTO.PagedResult<AgroServis.Services.DTO.EquipmentDto>
@{
    var currentSort = (ViewData["SortBy"] as string) ?? "";
    var currentDir = (ViewData["SortDir"] as string) ?? "";

    int pageNumber = int.TryParse(ViewContext.HttpContext.Request.Query["pageNumber"].FirstOrDefault(), out var pn) ? pn : Model.PageNumber;
    int pageSize = int.TryParse(ViewContext.HttpContext.Request.Query["pageSize"].FirstOrDefault(), out var ps) ? ps : Model.PageSize;

    Func<string, string> nextDir = key => (string.Equals(currentSort, key, StringComparison.OrdinalIgnoreCase) && currentDir != "desc") ? "desc" : "asc";
    Func<string, string> sortIndicator = key =>
        string.Equals(currentSort, key, StringComparison.OrdinalIgnoreCase)
            ? (currentDir == "desc" ? " ▼" : " ▲")
            : "";
}

<h2>Equipment</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a asp-action="Index"
                   asp-route-pageNumber="@(pageNumber)"
                   asp-route-pageSize="@(pageSize)"
                   asp-route-sortBy="id"
                   asp-route-sortDir="@(nextDir("id"))">
                    Id@(sortIndicator("id"))
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-pageNumber="@(pageNumber)" asp-route-pageSize="@(pageSize)" asp-route-sortBy="manufacturer" asp-route-sortDir="@(nextDir("manufacturer"))">
                    Manufacturer@(sortIndicator("manufacturer"))
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-pageNumber="@(pageNumber)" asp-route-pageSize="@(pageSize)" asp-route-sortBy="model" asp-route-sortDir="@(nextDir("model"))">
                    Model@(sortIndicator("model"))
                </a>
            </th>
            <th>SerialNumber</th>
            <th>
                <a asp-action="Index" asp-route-pageNumber="@(pageNumber)" asp-route-pageSize="@(pageSize)" asp-route-sortBy="type" asp-route-sortDir="@(nextDir("type"))">
                    Type@(sortIndicator("type"))
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-pageNumber="@(pageNumber)" asp-route-pageSize="@(pageSize)" asp-route-sortBy="category" asp-route-sortDir="@(nextDir("category"))">
                    Category@(sortIndicator("category"))
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-pageNumber="@(pageNumber)" asp-route-pageSize="@(pageSize)" asp-route-sortBy="lastmaintenance" asp-route-sortDir="@(nextDir("lastmaintenance"))">
                    Last Maintenance@(sortIndicator("lastmaintenance"))
                </a>
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Manufacturer</td>
                <td>@item.Model</td>
                <td>@item.SerialNumber</td>
                <td>@item.EquipmentType</td>
                <td>@item.EquipmentCategory</td>
                <td>@(item.LastMaintenanceDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                <td>
                    <a asp-controller="Equipment" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-controller="Equipment" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="Equipment" asp-action="Create" class="btn btn-primary">Create New</a>
</div>
