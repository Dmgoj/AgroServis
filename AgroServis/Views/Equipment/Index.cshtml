@model AgroServis.Services.DTO.PagedResult<AgroServis.Services.DTO.EquipmentDto>

@{
   
}

<h2>    Equipment</h2>
<div class="row">
	<div class="col-md-12">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Id</th>
					<th>Manufacturer</th>
					<th>Model</th>
					<th>SerialNumber</th>
					<th>Type</th>
					<th>Category</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model.Items)
				{
					<tr>
						<td>@item.Id</td>
						<td>@item.Manufacturer</td>
						<td>@item.Model</td>
						<td>@item.SerialNumber</td>
						<td>@item.EquipmentType</td>
						<td>@item.EquipmentCategory</td>
						<td>
							<a asp-controller="Equipment" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
							<form asp-controller="Equipment" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
								@Html.AntiForgeryToken()
								<button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this equipment?');">Delete</button>
							</form>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
<div class="row">
	<div class="col-md-12">
		<a asp-controller="Equipment" asp-action="Create" class="btn btn-primary">Create New</a>
	</div>
