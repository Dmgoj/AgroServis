@model AgroServis.Services.DTOs.MaintenanceCreateDto
@{
    ViewData["Title"] = "Create Maintenance Record";
}

<h2>Create Maintenance Record</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="EquipmentId">Equipment</label>
        <select asp-for="EquipmentId" class="form-control">
            <option value="">-- Select Equipment --</option>
            @if (Model?.AvailableEquipment != null)
            {
                foreach (var equipment in Model.AvailableEquipment)
                {
                    <option value="@equipment.Id">@equipment.Manufacturer @equipment.Model - @equipment.SerialNumber</option>
                }
            }
        </select>
        <span asp-validation-for="EquipmentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaintenanceDate">Date</label>
        <input asp-for="MaintenanceDate" type="date" class="form-control" />
        <span asp-validation-for="MaintenanceDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type">Type</label>
        <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<AgroServis.DAL.Enums.MaintenanceType>()">
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status">Status</label>
        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<AgroServis.DAL.Enums.MaintenanceStatus>()">
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cost">Cost</label>
        <input asp-for="Cost" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes">Notes</label>
        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <a asp-controller="Maintenance" asp-action="Create" class="btn btn-primary">Create</a>
        <a asp-controller="Equipment" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>



