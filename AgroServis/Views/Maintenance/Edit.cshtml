@model AgroServis.Services.DTOs.MaintenanceEditDto
@using AgroServis.DAL.Enums
@using System.Globalization

@{
    ViewData["Title"] = "Edit Maintenance";
}

<h2>Edit Maintenance</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input asp-for="Id" type="hidden" />

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="EquipmentName" class="form-label"></label>
        <input asp-for="EquipmentName" class="form-control" disabled />
        <input asp-for="EquipmentId" type="hidden" />
    </div>


    <div class="mb-3">
        <label asp-for="MaintenanceDate" class="form-label"></label>
        <input asp-for="MaintenanceDate" class="form-control" type="date" value="@(Model.MaintenanceDate.ToString("yyyy-MM-dd", CultureInfo.InvariantCulture))" />
        <span asp-validation-for="MaintenanceDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Type" class="form-label"></label>
        <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<MaintenanceType>()"></select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<AgroServis.DAL.Enums.MaintenanceStatus>()"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Cost" class="form-label"></label>
        <input asp-for="Cost" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PerformedBy" class="form-label"></label>
        <input asp-for="PerformedBy" class="form-control" />
        <span asp-validation-for="PerformedBy" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}