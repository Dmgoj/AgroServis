@model AgroServis.Services.DTOs.MaintenanceDto

<h2 class="mb-4">Maintenance Details</h2>

<div class="card">
    <div class="card-header">
        <strong>@Model.EquipmentName</strong>
        <span class="text-muted">
            (SN: @Model.EquipmentSerialNumber)
        </span>
    </div>

    <div class="card-body">

        <dl class="row">

            <dt class="col-sm-4">Maintenance Date</dt>
            <dd class="col-sm-8">@Model.FormattedDate</dd>

            <dt class="col-sm-4">Type</dt>
            <dd class="col-sm-8">@Model.Type</dd>

            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">@Model.Status</dd>

            <dt class="col-sm-4">Cost</dt>
            <dd class="col-sm-8">@Model.FormattedCost</dd>

            <dt class="col-sm-4">Performed By</dt>
            <dd class="col-sm-8">
                @(string.IsNullOrWhiteSpace(Model.PerformedBy) ? "N/A" : Model.PerformedBy)
            </dd>

            <dt class="col-sm-4">Description</dt>
            <dd class="col-sm-8">@Model.Description</dd>

            <dt class="col-sm-4">Notes</dt>
            <dd class="col-sm-8">
                @(string.IsNullOrWhiteSpace(Model.Notes) ? "N/A" : Model.Notes)
            </dd>

            <dt class="col-sm-4">Created At</dt>
            <dd class="col-sm-8">@Model.CreatedAt.ToString("dd-MM-yyyy HH:mm")</dd>

            <dt class="col-sm-4">Updated At</dt>
            <dd class="col-sm-8">
                @(Model.UpdatedAt.HasValue
                                ? Model.UpdatedAt.Value.ToString("dd-MM-yyyy HH:mm")
                                : "—")
            </dd>

        </dl>

    </div>

    <div class="card-footer text-end">
        <a asp-action="Index"
           asp-controller="Maintenance"
           asp-route-equipmentId="@Model.EquipmentId"
           class="btn btn-secondary">
            Back
        </a>

        <a asp-action="Edit"
           asp-controller="Maintenance"
           asp-route-id="@Model.Id"
           class="btn btn-warning">
            Edit
        </a>
    </div>
</div>
