@using AgroServis.DAL.Enums
@model AgroServis.Services.DTO.PagedResult<AgroServis.Services.DTOs.MaintenanceDto>

@{
    ViewData["Title"] = "Maintenances";
}

<h2>Maintenances</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Equipment</th>
                    <th>Serial Number</th>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Cost</th>
                    <th>Performed By</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.EquipmentName</td>
                        <td>@item.EquipmentSerialNumber</td>
                        <td>@item.FormattedDate</td>
                        <td>@item.Type</td>
                        <td>
                            <span class="badge
                                @(item.Status == MaintenanceStatus.Completed ? "bg-success" :
                                  item.Status == MaintenanceStatus.InProgress ? "bg-warning" : "bg-secondary")">
                                @item.Status
                            </span>
                        </td>
                        <td>@item.FormattedCost</td>
                        <td>@item.PerformedBy</td>
                        <td>
                            <a asp-controller="Maintenance"
                               asp-action="Details"
                               asp-route-id="@item.Id"
                               class="btn btn-info btn-sm">
                                Details
                            </a>

                            <a asp-controller="Maintenance"
                               asp-action="Edit"
                               asp-route-id="@item.Id"
                               class="btn btn-warning btn-sm">
                                Edit
                            </a>

                            <form asp-controller="Maintenance"
                                  asp-action="Delete"
                                  asp-route-id="@item.Id"
                                  method="post"
                                  style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit"
                                        class="btn btn-danger btn-sm"
                                        onclick="return confirm('Are you sure you want to delete this maintenance record?');">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <a asp-controller="Maintenance"
           asp-action="Create"
           class="btn btn-primary">
            Create New Maintenance
        </a>
    </div>
</div>
