@model string

@{
    ViewData["Title"] = "Registration Rejected";
}

<div class="container mt-5">
    <div class="text-center">
        <i class="bi bi-x-circle text-danger" style="font-size: 4rem;"></i>
        <h2 class="mt-3">Registration Rejected</h2>
        <p class="lead">The registration for <strong>@Model</strong> has been rejected.</p>
        <p class="text-muted">The applicant has been notified via email.</p>
    </div>
</div>