@model string

@{
    ViewData["Title"] = "Registration Approved";
}

<div class="container mt-5">
    <div class="text-center">
        <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
        <h2 class="mt-3">Registration Approved!</h2>
