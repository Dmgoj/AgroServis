@model AgroServis.Services.DTO.PagedResult<AgroServis.Services.DTO.WorkerDto>

@{
    ViewData["Title"] = "Workers Management";
    var sortBy = ViewData["SortBy"]?.ToString() ?? "";
    var sortDir = ViewData["SortDir"]?.ToString() ?? "";
    var search = ViewData["Search"]?.ToString() ?? "";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-people-fill"></i> Workers Management</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Worker
            </a>
        </div>
    </div>

    <!-- Tabs Navigation -->
    <ul class="nav nav-tabs mb-4" id="workersTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="workers-tab" data-bs-toggle="tab" data-bs-target="#workers" type="button" role="tab">
                <i class="bi bi-people"></i> Active Workers
                <span class="badge bg-primary">@Model.TotalItems</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab">
                <i class="bi bi-hourglass-split"></i> Pending Registrations
                @if (ViewBag.PendingCount > 0)
                {
                    <span class="badge bg-warning text-dark">@ViewBag.PendingCount</span>
                }
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="workersTabContent">

        <!-- ACTIVE WORKERS TAB -->
        <div class="tab-pane fade show active" id="workers" role="tabpanel">

            <!-- Search and Filter Section -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="get" asp-action="Index" class="row g-3">
                        <div class="col-md-4">
                            <label for="search" class="form-label">Search</label>
                            <input type="text" class="form-control" id="search" name="search" value="@search"
                                   placeholder="Search by name, email, or position...">
                        </div>
                        <div class="col-md-2">
                            <label for="pageSize" class="form-label">Items per page</label>
                            <select class="form-select" id="pageSize" name="pageSize">
                                <option value="5" selected="@(Model.PageSize == 5)">5</option>
                                <option value="10" selected="@(Model.PageSize == 10)">10</option>
                                <option value="25" selected="@(Model.PageSize == 25)">25</option>
                                <option value="50" selected="@(Model.PageSize == 50)">50</option>
                            </select>
                        </div>
                        <div class="col-md-6 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-search"></i> Search
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Clear
                            </a>
                        </div>
                        <input type="hidden" name="sortBy" value="@sortBy" />
                        <input type="hidden" name="sortDir" value="@sortDir" />
                    </form>
                </div>
            </div>

            <!-- Workers Table -->
            <div class="card">
                <div class="card-body">
                    @if (Model.Items.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>
                                            <a asp-action="Index"
                                               asp-route-pageNumber="@Model.PageNumber"
                                               asp-route-pageSize="@Model.PageSize"
                                               asp-route-sortBy="firstname"
                                               asp-route-sortDir="@(sortBy == "firstname" && sortDir == "asc" ? "desc" : "asc")"
                                               asp-route-search="@search"
                                               class="text-decoration-none text-dark">
                                                First Name
                                                @if (sortBy == "firstname")
                                                {
                                                    <i class="bi bi-@(sortDir == "asc" ? "arrow-up" : "arrow-down")"></i>
                                                }
                                            </a>
                                        </th>
                                        <th>
                                            <a asp-action="Index"
                                               asp-route-pageNumber="@Model.PageNumber"
                                               asp-route-pageSize="@Model.PageSize"
                                               asp-route-sortBy="lastname"
                                               asp-route-sortDir="@(sortBy == "lastname" && sortDir == "asc" ? "desc" : "asc")"
                                               asp-route-search="@search"
                                               class="text-decoration-none text-dark">
                                                Last Name
                                                @if (sortBy == "lastname")
                                                {
                                                    <i class="bi bi-@(sortDir == "asc" ? "arrow-up" : "arrow-down")"></i>
                                                }
                                            </a>
                                        </th>
                                        <th>
                                            <a asp-action="Index"
                                               asp-route-pageNumber="@Model.PageNumber"
                                               asp-route-pageSize="@Model.PageSize"
                                               asp-route-sortBy="email"
                                               asp-route-sortDir="@(sortBy == "email" && sortDir == "asc" ? "desc" : "asc")"
                                               asp-route-search="@search"
                                               class="text-decoration-none text-dark">
                                                Email
                                                @if (sortBy == "email")
                                                {
                                                    <i class="bi bi-@(sortDir == "asc" ? "arrow-up" : "arrow-down")"></i>
                                                }
                                            </a>
                                        </th>
                                        <th>Phone</th>
                                        <th>
                                            <a asp-action="Index"
                                               asp-route-pageNumber="@Model.PageNumber"
                                               asp-route-pageSize="@Model.PageSize"
                                               asp-route-sortBy="position"
                                               asp-route-sortDir="@(sortBy == "position" && sortDir == "asc" ? "desc" : "asc")"
                                               asp-route-search="@search"
                                               class="text-decoration-none text-dark">
                                                Position
                                                @if (sortBy == "position")
                                                {
                                                    <i class="bi bi-@(sortDir == "asc" ? "arrow-up" : "arrow-down")"></i>
                                                }
                                            </a>
                                        </th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var worker in Model.Items)
                                    {
                                        <tr>
                                            <td>@worker.FirstName</td>
                                            <td>@worker.LastName</td>
                                            <td>@worker.Email</td>
                                            <td>@worker.PhoneNumber</td>
                                            <td>@(worker.Position ?? "-")</td>
                                            <td class="text-center">
                                                <form asp-action="Delete" asp-route-id="@worker.Id" method="post" class="d-inline"
                                                      onsubmit="return confirm('Are you sure you want to delete @worker.FullName?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-danger">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (Model.TotalPages > 1)
                        {
                            <nav aria-label="Page navigation" class="mt-4">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                                        <a class="page-link"
                                           asp-action="Index"
                                           asp-route-pageNumber="@(Model.PageNumber - 1)"
                                           asp-route-pageSize="@Model.PageSize"
                                           asp-route-sortBy="@sortBy"
                                           asp-route-sortDir="@sortDir"
                                           asp-route-search="@search">
                                            Previous
                                        </a>
                                    </li>

                                    @for (int i = 1; i <= Model.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                            <a class="page-link"
                                               asp-action="Index"
                                               asp-route-pageNumber="@i"
                                               asp-route-pageSize="@Model.PageSize"
                                               asp-route-sortBy="@sortBy"
                                               asp-route-sortDir="@sortDir"
                                               asp-route-search="@search">
                                                @i
                                            </a>
                                        </li>
                                    }

                                    <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                                        <a class="page-link"
                                           asp-action="Index"
                                           asp-route-pageNumber="@(Model.PageNumber + 1)"
                                           asp-route-pageSize="@Model.PageSize"
                                           asp-route-sortBy="@sortBy"
                                           asp-route-sortDir="@sortDir"
                                           asp-route-search="@search">
                                            Next
                                        </a>
                                    </li>
                                </ul>
                            </nav>

                            <div class="text-center text-muted">
                                <small>
                                    Showing @((Model.PageNumber - 1) * Model.PageSize + 1)
                                    to @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalItems))
                                    of @Model.TotalItems workers
                                </small>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> No workers found.
                            @if (!string.IsNullOrEmpty(search))
                            {
                                <a asp-action="Index" class="alert-link">Clear search</a>
                                <text> to see all workers.</text>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- PENDING REGISTRATIONS TAB -->
        <div class="tab-pane fade" id="pending" role="tabpanel">
            <div class="card">
                <div class="card-body">
                    @if (ViewBag.PendingCount > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Position</th>
                                        <th>Requested</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var registration in ViewBag.PendingRegistrations)
                                    {
                                        <tr>
                                            <td><strong>@registration.FirstName @registration.LastName</strong></td>
                                            <td>@registration.Email</td>
                                            <td>@registration.PhoneNumber</td>
                                            <td>@(registration.Position ?? "-")</td>
                                            <td>
                                                <small class="text-muted">
                                                    @registration.RequestedAt.ToString("MMM dd, yyyy")
                                                    <br />
                                                    @registration.RequestedAt.ToString("HH:mm")
                                                </small>
                                            </td>
                                            <td class="text-center">
                                                <form asp-controller="Admin" asp-action="ApproveRegistration" asp-route-id="@registration.Id" method="post" class="d-inline me-1"
                                                      onsubmit="return confirm('Approve registration for @registration.FirstName @registration.LastName?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-success">
                                                        <i class="bi bi-check-circle"></i> Approve
                                                    </button>
                                                </form>

                                                <form asp-controller="Admin" asp-action="RejectRegistration" asp-route-id="@registration.Id" method="post" class="d-inline"
                                                      onsubmit="return confirm('Reject registration for @registration.FirstName @registration.LastName?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-danger">
                                                        <i class="bi bi-x-circle"></i> Reject
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center py-5">
                            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                            <h4 class="mt-3">No Pending Registrations</h4>
                            <p class="text-muted">All registration requests have been processed.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        const urlParams = new URLSearchParams(window.location.search);
        const activeTab = urlParams.get('tab');

        if (activeTab === 'pending') {
            const pendingTab = new bootstrap.Tab(document.getElementById('pending-tab'));
            pendingTab.show();
        }
    </script>
}